<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="upgrade">
	<name>FLEXIcontent</name>
	<creationDate>29 November 2012</creationDate>
	<author>Emmanuel Danan, Georgios Papadakis</author>
	<copyright>(C) 2009-2012 Emmanuel Danan</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>http://www.flexicontent.org</authorUrl>
	<version>1.5.6 RC9b r1568</version>
	<description>A flexible content management system for Joomla! J1.5/J2.5</description>

	<languages folder="site/language">
		<language tag="en-GB">en-GB.com_flexicontent.ini</language>
	</languages>

	<files folder="site">
		<filename>index.html</filename>
		<filename>flexicontent.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<filename>LICENSE.php</filename>
		<filename>CHANGELOG.php</filename>
		<filename>TODO.php</filename>
		<filename>README.php</filename>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>librairies</folder>
		<folder>models</folder>
		<folder>sef_ext</folder>
		<folder>templates</folder>
		<folder>tmpl_common</folder>
		<folder>views</folder>
	</files>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">installation/install.mysql.utf8.sql</file>
			<file driver="mysql">installation/install.mysql.nonutf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">installation/uninstall.mysql.utf8.sql</file>
			<file driver="mysql">installation/uninstall.mysql.nonutf8.sql</file>
		</sql>
	</uninstall>

	<administration>
		<menu img="../administrator/components/com_flexicontent/assets/images/flexicontent.png">FLEXIcontent</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>admin.flexicontent.php</filename>
			<filename>defineconstants.php</filename>
			<filename>controller.php</filename>
			<filename>config.xml</filename>
			<folder>installation</folder>
			<folder>assets</folder>
			<folder>views</folder>
			<folder>models</folder>
			<folder>controllers</folder>
			<folder>tables</folder>
			<folder>elements</folder>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB.com_flexicontent.ini</language>
		</languages>
		<params>
			<param name="flexi_section" default="" />
			<param name="comments" default="0" />
			<param name="support_url" default="" />
			<param name="add_tooltips" default="1" />
			<param name="disablecss" default="0" />
			<param name="show_updatecheck" default="1" />
			<param name="new_item_state" default="-4" />
			<param name="flexi_fish" default="0" />
			<param name="filtercat" default="0" />
			<param name="filtertag" default="0" />
			<param name="disable_lang_select" default="1" />
			<param name="use_versioning" default="1" />
			<param name="nr_versions" default="10" />
			<param name="versionsperpage" default="5" />
			<param name="auto_approve" default="1" />
			<param name="disable_diff" default="0" />
			<param name="show_title" default="1" />
			<param name="link_titles" default="1" />
			<param name="show_readmore" default="1" />
			<param name="show_intro" default="1" />
			<param name="form_extra_css" default="" />
			<param name="autoflogin" default="1" />
			<param name="show_icons" default="1" />
			<param name="show_pdf_icon" default="1" />
			<param name="show_print_icon" default="1" />
			<param name="show_email_icon" default="1" />

			<param name="catlimit" default="100" />
			<param name="limit" default="10" />
			<param name="feed_summary" default="0" />
			<param name="trigger_onprepare_content_cat" default="1" />
			<param name="filter_types" default="createdby,modifiedby,type,state,tags,checkbox,checkboximage,radio,radioimage,select,selectmultiple" />

			<param name="upload_extensions" default="bmp,csv,doc,gif,ico,jpg,jpeg,odg,odp,ods,odt,pdf,png,ppt,swf,txt,xcf,xls,zip,BMP,CSV,DOC,GIF,ICO,JPG,JPEG,ODG,ODP,ODS,ODT,PDF,PNG,PPT,SWF,TXT,XCF,XLS,ZIP" />
			<param name="upload_maxsize" default="10000000" />
			<param name="file_path" default="components/com_flexicontent/uploads" />
			<param name="media_path" default="components/com_flexicontent/medias" />
			<param name="restrict_uploads" default="1" />
			<param name="check_mime" default="1" />
			<param name="image_extensions" default="bmp,gif,jpg,png" />
			<param name="ignore_extensions" default="" />	
			<param name="upload_mime" default="image/jpeg,image/gif,image/png,image/bmp,application/x-shockwave-flash,application/msword,application/excel,application/pdf,application/powerpoint,text/plain,application/x-zip" />
			<param name="upload_mime_illegal" default="text/html" />
			<param name="enable_flash" default="0" />
			<param name="advcache" default="1" />
			<param name="advcache_time" default="3600" />
			<param name="purge_gc" default="1" />
		</params>
	</administration>

<additional>
	<plugin name="checkbox"        folder="plugins/checkbox"        instfolder="flexicontent_fields">Checkbox field</plugin>
	<plugin name="checkboximage"   folder="plugins/checkboximage"   instfolder="flexicontent_fields">Checkbox Image field</plugin>
	<plugin name="core"            folder="plugins/core"            instfolder="flexicontent_fields">Core and Autogenerated fields</plugin>
	<plugin name="date"            folder="plugins/date"            instfolder="flexicontent_fields">Date field</plugin>
	<plugin name="email"           folder="plugins/email"           instfolder="flexicontent_fields">Email field</plugin>
	<plugin name="extendedweblink" folder="plugins/extendedweblink" instfolder="flexicontent_fields">Extended Weblink field</plugin>
	<plugin name="fcloadmodule"    folder="plugins/fcloadmodule"    instfolder="flexicontent_fields">Load module field</plugin>
	<plugin name="fcpagenav"       folder="plugins/fcpagenav"       instfolder="flexicontent_fields">Page navigation field</plugin>
	<plugin name="file"            folder="plugins/file"            instfolder="flexicontent_fields">File field</plugin>
	<plugin name="groupmarker"     folder="plugins/groupmarker"     instfolder="flexicontent_fields">Group marker field</plugin>
	<plugin name="image"           folder="plugins/image"           instfolder="flexicontent_fields">Image field</plugin>
	<plugin name="linkslist"       folder="plugins/linkslist"       instfolder="flexicontent_fields">Links list field</plugin>
	<plugin name="minigallery"     folder="plugins/minigallery"     instfolder="flexicontent_fields">Minigallery field</plugin>
	<plugin name="radio"           folder="plugins/radio"           instfolder="flexicontent_fields">Radio field</plugin>
	<plugin name="radioimage"      folder="plugins/radioimage"      instfolder="flexicontent_fields">Radio Image field</plugin>
	<plugin name="relateditems"    folder="plugins/relateditems"    instfolder="flexicontent_fields">Related Items field</plugin>
	<plugin name="relateditems_backlinks" folder="plugins/relateditems_backlinks" instfolder="flexicontent_fields">Related Items Backlinks field</plugin>
	<plugin name="select"          folder="plugins/select"          instfolder="flexicontent_fields">Select list field</plugin>
	<plugin name="selectmultiple"  folder="plugins/selectmultiple"  instfolder="flexicontent_fields">Multiple select list field</plugin>
	<plugin name="text"            folder="plugins/text"            instfolder="flexicontent_fields">Text field</plugin>
	<plugin name="textarea"        folder="plugins/textarea"        instfolder="flexicontent_fields">Textarea field</plugin>
	<plugin name="textselect"      folder="plugins/textselect"      instfolder="flexicontent_fields">TextSelect field</plugin>
	<plugin name="toolbar"         folder="plugins/toolbar"         instfolder="flexicontent_fields">Article toolbar field</plugin>
	<plugin name="weblink"         folder="plugins/weblink"         instfolder="flexicontent_fields">Weblink field</plugin>

	<plugin name="flexinotify"     folder="plugins/flexinotify"     instfolder="flexicontent">Notifications plugin for FLEXIcontent</plugin>

	<plugin name="flexisearch"     folder="plugins/search"          instfolder="search">Search plugin for FLEXIcontent</plugin>
	<plugin name="flexiadvsearch"  folder="plugins/advsearch"       instfolder="search">Advanced search plugin for flexicontent.</plugin>
	<plugin name="flexisystem"     folder="plugins/system"          instfolder="system">System plugin for FLEXIcontent</plugin>
	<plugin name="flexiadvroute"   folder="plugins/advroute"        instfolder="system">System plugin for advanced FLEXIcontent routing</plugin>

	<module name="mod_flexicontent"   folder="modules/mod_flexicontent">Universal content module for the FLEXIcontent Component</module>
	<module name="mod_flexifilter"    folder="modules/mod_flexifilter">Content lists filter module for the FLEXIcontent Component</module>
	<module name="mod_flexitagcloud"  folder="modules/mod_flexitagcloud">Tag Cloud Module for the FLEXIcontent Component</module>
	<module name="mod_flexiadvsearch" folder="modules/mod_flexiadvsearch">Advanced search module for the FLEXIcontent Component</module>
</additional>

<installfile>install.php</installfile>
<uninstallfile>uninstall.php</uninstallfile>

</install>
