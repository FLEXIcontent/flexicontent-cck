<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - File</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_FILE</description>
	<files>
		<filename plugin="file">file.php</filename>
	</files>
	<config>
	<fields name="attribs">
		<fieldset name="basic">
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
		</fieldset>
		<fieldset name="group-file">
			<field name="size" type="text" default="50" size="2" label="FLEXI_FIELD_SIZE" description="FLEXI_FIELD_SIZE_DESC" />
			<field name="separatorf" type="list" default="1" label="FLEXI_FIELD_SEPARATOR_FRONTEND" description="FLEXI_FIELD_SEPARATOR_FRONTEND_DESC">
				<option value="0">FLEXI_SPACE</option>
				<option value="1">FLEXI_LINE_BREAK</option>
				<option value="2">FLEXI_PIPE</option>
				<option value="3">FLEXI_COMMA</option>
			</field>
			<field name="useicon" type="radio" default="1" label="FLEXI_FIELD_MIME_ICON" description="FLEXI_FIELD_MIME_ICON_DESC">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="usebutton" type="radio" default="0" label="FLEXI_FIELD_DOWNLOAD_BUTTON" description="FLEXI_FIELD_DOWNLOAD_BUTTON_DESC">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="display_filename" type="radio" default="0" label="Display filename" description="Display filename(if you use download button)">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="required" type="radio" default="0" label="Required" description="Required">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
		</fieldset>
	</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_file.ini</language>
		<language tag="fr-FR">fr-FR.plg_flexicontent_fields_file.ini</language>
		<language tag="de-DE">de-DE.plg_flexicontent_fields_file.ini</language>
		<language tag="ru-RU">ru-RU.plg_flexicontent_fields_file.ini</language>
	</languages>
</install>
