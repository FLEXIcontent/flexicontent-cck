<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6" group="search" method="upgrade">
	<name>PLG_SEARCH_FLEXISEARCH</name>
	<author>Emmanuel Danan, Aazam, ggppdk</author>
	<creationDate>oct 2011</creationDate>
	<copyright>Copyright (C) 2011 Aazam, Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>aazam@yandex.ru, emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>aazam.narod.ru,www.vistamedia.fr</authorUrl>
	<version>1.1</version>
	<description>PLG_SEARCH_FLEXISEARCH_DESCRIPTION</description>
	<files>
		<filename plugin="flexisearch">flexisearch.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages>
		<language tag="en-GB">en-GB.plg_search_flexisearch.ini</language>
		<language tag="en-GB">en-GB.plg_search_flexisearch.sys.ini</language>
	</languages>
	<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="filter_lang" type="radio" default="1" label="FLEXI_STDSEARCH_LANG" description="FLEXI_STDSEARCH_LANG_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_limit" type="text" size="5" default="50" label="FLEXI_STDSEARCH_LIMIT" description="FLEXI_STDSEARCH_LIMIT_DESC"/>
			<field name="search_title" type="radio" default="1" label="FLEXI_STDSEARCH_TITLE" description="FLEXI_STDSEARCH_TITLE_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_desc" type="radio" default="1" label="FLEXI_STDSEARCH_DESC" description="FLEXI_STDSEARCH_DESC_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_fields" type="radio" default="1" label="FLEXI_STDSEARCH_FIELDS" description="FLEXI_STDSEARCH_FIELDS_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_meta" type="radio" default="1" label="FLEXI_STDSEARCH_META" description="FLEXI_STDSEARCH_META_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_tags" type="radio" default="1" label="FLEXI_STDSEARCH_TAGS" description="FLEXI_STDSEARCH_TAGS_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_select_types" type="radio" default="1" label="FLEXI_STDSEARCH_SELECT_TYPES" description="FLEXI_STDSEARCH_SELECT_TYPES_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="search_types" type="text" size="40" default="" label="FLEXI_STDSEARCH_TYPES" description="FLEXI_STDSEARCH_TYPES_DESC"/>
		</fieldset>
	</fields>
	</config>
</extension>