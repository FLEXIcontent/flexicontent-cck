<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
	<name>System - FLEXIcontent</name>
	<author>Emmanuel Danan</author>
	<creationDate>June 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.1</version>
	<description>FLEXI_PLUGIN_SYSTEM</description>
	<files>
		<filename plugin="flexisystem">flexisystem.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_flexisystem.ini</language>
		<language tag="fr-FR">fr-FR.plg_system_flexisystem.ini</language>
		<language tag="de-DE">de-DE.plg_system_flexisystem.ini</language>
		<language tag="ru-RU">ru-RU.plg_system_flexisystem.ini</language>
	</languages>
	<config>
	<fields name="params">
		<fieldset name="basic" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="exclude_redirect_cats" type="flexiusergroup" default="" multiple="true" size="16" label="Exclude from category redirection" description="Exclude from category redirection ..." />
			<field name="exclude_redirect_articles" type="flexiusergroup" default="" multiple="true" size="16" label="Exclude from article redirection" description="Exclude from article redirection ..." />
			<field name="excluded_redirect_urls" type="textarea" rows="6" cols="70" label="Exclude urls from redirection (enter a part)" description="if you have trouble with some URLs unwantingly redirecting to FLEXIcontent URLs, you can enter here a sub-string of them, in order to exclude them from redirection. Seperate urls with %% DO NOT add new line characters" />
		</fieldset>
	</fields>
	</config>
</install>