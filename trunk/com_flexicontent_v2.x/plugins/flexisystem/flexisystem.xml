<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
	<name>System - FLEXIcontent</name>
	<author>Emmanuel Danan</author>
	<creationDate>June 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.1</version>
	<description>FLEXI_PLUGIN_SYSTEM</description>
	<files>
		<filename plugin="flexisystem">flexisystem.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_flexisystem.ini</language>
		<language tag="fr-FR">fr-FR.plg_system_flexisystem.ini</language>
		<language tag="de-DE">de-DE.plg_system_flexisystem.ini</language>
		<language tag="ru-RU">ru-RU.plg_system_flexisystem.ini</language>
	</languages>
	<config>
	<fields name="params"  addfieldpath="/administrator/components/com_flexicontent/elements">
		<fieldset name="basic" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="" type="separator" default="URL redirections" hr="false" level="level2" menu="hide" />
			<field name="exclude_redirect_cats" type="flexiusergroup" default="" multiple="true" size="16" label="Exclude from category redirection&lt;br&gt; (BACKEND Only)" description="Exclude from category redirection ..." />
			<field name="exclude_redirect_articles" type="flexiusergroup" default="" multiple="true" size="16" label="Exclude from article redirection&lt;br&gt; (BACKEND Only)" description="Exclude from article redirection ..." />
			<field name="excluded_redirect_urls" type="textarea" rows="6" cols="50" label="Exclude urls from redirection (enter a part) (BACKEND Only)" description="if you have trouble with some URLs unwantingly redirecting to FLEXIcontent URLs, you can enter here a sub-string of them, in order to exclude them from redirection. Seperate urls with %% DO NOT add new line characters" />
			<!--field name="excluded_cats" type="flexicategories" default="" multiple="true" size="16" label="Exclude specific categories&lt;br&gt; *(please read description)" description="The choosen categories will not be redirected in (a) the category view or (b) in item view when acting as CURRENT category (URL) of the item" /-->
			<!--field name="excluded_items" type="textarea" default="" rows="3" cols="50" label="Exclude specific items" description="Enter a comma seperated list of item ids that will not be redirected" /-->

			<field name="" type="separator" default="Auto-Checkins" hr="false" level="level2" menu="hide" />
			<field name="checkin_on_session_end" type="radio" default="1" label="Check-in on user logout / session expiration" description="Check-out records (items,categories,etc) will be checked-in on user logout or session expiration">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="limit_checkout_hours" type="radio" default="1" label="Time-Limit check-outs" description="Impose a maximum time for checked-out records. Records exceeding this limit whill be  checked">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="max_checkout_hours" type="text" label="Max checked out hours" description="Maximum allowed time an record (item,category,etc) should be checked out before automatically checking it in" default="24" />

		</fieldset>
	</fields>
	</config>
</install>