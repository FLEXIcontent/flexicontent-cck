<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Linkslist</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_LINKSLIST</description>
	<files>
		<filename plugin="linkslist">linkslist.php</filename>
	</files>
	<config>
	<fields name="attribs">
		<fieldset name="basic">
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
		</fieldset>
		<fieldset name="group-linkslist">
			<field type="spacer" name="test" default="&lt;script type=&quot;text/javascript&quot;&gt; window.addEvent('domready', function(){
		
			var label 		= $('paramsfield_elements-lbl'),
				labelcell   = label.getParent().getParent(),
				destination = labelcell.getParent().getPrevious().getElement('.paramlist_key');
				
			/*destination.removeClass('paramlist_key');*/
				
			labelcell.remove();
			label.inject(destination);
			/*destination.setStyle('text-align', 'left');*/
			
			$('paramsfield_elements').getParent().setProperty('colspan', 2).addClass('paramlist_key'); 
		
		}); &lt;/script&gt;" />
			<field name="field_elements" type="textarea" default="Title[link=&quot;#&quot; class=&quot;list link&quot;] :: Title2[id=&quot;myID&quot;]" class="required" rows="5" cols="40" label="FLEXI_FIELD_LINKSLIST_ELEMENTS" description="FLEXI_FIELD_LINKSLIST_ELEMENTS_DESC" />
			<field name="list_type" type="list" default="ul" label="FLEXI_FIELD_LIST_TYPE" description="FLEXI_FIELD_LIST_TYPE_DESC">
				<option value="ul">Unordered list</option>
				<option value="ol">Ordered list</option>
			</field>
			<field name="list_class" type="text" default="" label="FLEXI_FIELD_LIST_CLASS" description="FLEXI_FIELD_LIST_CLASS_DESC" />
			<field name="list_id" type="text" default="" label="FLEXI_FIELD_LIST_ID" description="FLEXI_FIELD_LIST_ID_DESC" />
			<field name="required" type="radio" default="0" label="FLEXI_REQUIRED" description="FLEXI_REQUIRED_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
		</fieldset>
	</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_linkslist.ini</language>
	</languages>
</install>
