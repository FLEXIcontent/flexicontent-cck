<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Radio (or Single Select) Image</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_RADIOIMAGE</description>
	<files>
		<filename plugin="radioimage">radioimage.php</filename>
	</files>
	<config>
	<fields name="attribs">
		<fieldset name="basic">
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
		</fieldset>
		<fieldset name="group-radioimage">
			<field name="display_as_select" type="radio" default="0" label="FLEXI_FIELD_CONVERT_TO_SINGLE_SELECT" description="FLEXI_FIELD_CONVERT_TO_SINGLE_SELECT_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="firstoptiontext" type="text" default="Please Select" label="First option text" description="First option text." />
			<field name="usefirstoption" type="radio" default="1" label="Use first option" description="Use 'Please Select' option, if you don't need to use this option you can click No.">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="@spacer" type="spacer" default="" label="" description="" />
			
			<field name="field_elements" type="textarea" default="1::Yes%% 0::No%% " class="required" rows="5" cols="25" label="FLEXI_FIELD_ELEMENTS" description="FLEXI_FIELD_ELEMENTS_DESC" />
			<field name="imagedir" type="text" default="images/stories/" class="required" label="FLEXI_FIELD_IMAGEDIR" description="FLEXI_FIELD_IMAGEDIR_DESC" />
			<field name="default_value" type="text" default="" label="FLEXI_FIELD_DEFAULT_VALUE" description="FLEXI_FIELD_DEFAULT_VALUE_DESC" />
			<field name="separator" type="list" default="0" label="FLEXI_FIELD_SEPARATOR_BACKEND" description="FLEXI_FIELD_SEPARATOR_BACKEND_DESC">
				<option value="0">FLEXI_SPACE</option>
				<option value="1">FLEXI_LINE_BREAK</option>
				<option value="2">FLEXI_PIPE</option>
				<option value="3">FLEXI_COMMA</option>
			</field>
			<field name="display_label_filter" type="radio" default="0" label="FLEXI_LABEL_FILTER" description="FLEXI_LABEL_FILTER_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_BEFORE_SELECT</option>
				<option value="2">FLEXI_IN_SELECT</option>
			</field>
			<field name="required" type="radio" default="0" label="FLEXI_REQUIRED" description="FLEXI_REQUIRED_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
		</fieldset>
	</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_radioimage.ini</language>
		<language tag="fr-FR">fr-FR.plg_flexicontent_fields_radioimage.ini</language>
		<language tag="ru-RU">ru-RU.plg_flexicontent_fields_radioimage.ini</language>
		<language tag="de-DE">de-DE.plg_flexicontent_fields_radioimage.ini</language>
	</languages>
</install>
