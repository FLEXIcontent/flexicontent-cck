<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Textarea</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_TEXTAREA</description>
	<files>
		<filename plugin="textarea">textarea.php</filename>
	</files>
	<config>
	<fields name="attribs">
		<fieldset name="basic">
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
		</fieldset>
		<fieldset name="group-textarea" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="trigger_onprepare_content" type="radio" default="0" label="FLEXI_ENABLE_TRIGGER_ONPREPARECONTENT_EVENT" description="FLEXI_ENABLE_TRIGGER_ONPREPARECONTENT_EVENT_DESC"  menu="hide">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="trigger_plgs_incatview" type="radio" default="0" label="FLEXI_TRIGGER_ONPREPARECONTENT_EVENT_INCATVIEW" description="FLEXI_TRIGGER_ONPREPARECONTENT_EVENT_INCATVIEW_DESC"  menu="hide">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="plugins" type="pluginlist" label="FLEXI_FIELD_CHOOSE_SPECIFIC_PLUGINS" description="FLEXI_FIELD_CHOOSE_SPECIFIC_PLUGINS_DESC" />
			<field name="default_value" type="text" default="" label="FLEXI_FIELD_DEFAULT_VALUE" description="FLEXI_FIELD_DEFAULT_VALUE_DESC" />
			<field name="rows" type="text" default="10" size="2" label="FLEXI_FIELD_ROWS" description="FLEXI_FIELD_ROWS_DESC" />
			<field name="cols" type="text" default="75" size="2" label="FLEXI_FIELD_COLS" description="FLEXI_FIELD_COLS_DESC" />
			<field name="use_html" type="radio" default="0" label="FLEXI_FIELD_USE_HTML" description="FLEXI_FIELD_USE_HTML_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="height" type="text" default="350" size="2" label="FLEXI_FIELD_HEIGHT" description="FLEXI_FIELD_HEIGHT_DESC" />
			<field name="opentag" type="text" default="" label="FLEXI_FIELD_OPENING_TEXT" description="FLEXI_FIELD_OPENING_TEXT_DESC" />
			<field name="closetag" type="text" default="" label="FLEXI_FIELD_CLOSING_TEXT" description="FLEXI_FIELD_CLOSING_TEXT_DESC" />
			<field name="required" type="radio" default="0" label="FLEXI_REQUIRED" description="FLEXI_REQUIRED_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="adv_size" type="text" default="30" size="2" label="Adv. search field size" description="Advanced search field size" />
			
			<field name="" type="separator" default="FLEXI_SOCIAL_SUPPORT" description="FLEXI_SOCIAL_SUPPORT_IMG_DESC" level="level1" />
			<field name="useogp" type="radio" default="0" label="FLEXI_SOCIAL_SUGGEST_FIELD" description="FLEXI_SOCIAL_SUGGEST_TXT_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="ogpinview" type="fccheckbox" default=""
				checkoptions="FLEXI_ITEMS,FLEXI_CATEGORY,FLEXI_MODULE" checkvals="item,category,module" defaultvals="item,category,module"
				label="FLEXI_FIELD_ENABLE_IN_VIEWS" description="FLEXI_FIELD_ENABLE_IN_VIEWS_DESC" />
			<field name="ogpusage" type="radio" default="1" label="FLEXI_SOCIAL_USAGE_IN_LISTING" description="FLEXI_SOCIAL_USAGE_IN_LISTING_DESC">
				<option value="1">FLEXI_TITLE</option>
				<option value="2">FLEXI_DESCRIPTION</option>
			</field>
			<field name="ogpmaxlen" type="text" default="300" label="FLEXI_SOCIAL_TXT_MAXLEN_LISTING" description="FLEXI_SOCIAL_TXT_MAXLEN_LISTING_DESC" />
			
			<field name="" type="separator" default="Textarea Tabbing Parameters" level="level1" menu="hide" />
		
			<field name="" type="separator" default="FOR DEVELOPERS ONLY. &lt;br/&gt; DO NOT ENABLE AS IT MAY LEAD TO DATA LOSS.  &lt;br/&gt;&lt;br/&gt; -- The following parameters allows to make your textarea TABBED, in both ITEM DISPLAY VIEW and in ITEM EDIT FORM.&lt;br/&gt;&lt;br/&gt; -- Enabling this requires very good knowledge of regular expressions, AND knowledge of the syntax of some TAB-CREATING joomla plugins. &lt;br/&gt;&lt;br/&gt; -- Future versions may come with predefined configurations, thus allowing easy use." level="level2" menu="hide" />
		
			<field name="editorarea_per_tab" type="radio" default="0" label="One editor area per tab" description="...">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
			<field name="allow_tab_insertion" type="radio" default="0" label="Allow insertion of tabs" description="...">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
			<field name="allow_tabs_code_editing" type="radio" default="1" label="Allow edit of tabs code" description="Display the code of tabs in editable areas so that it can be changed">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
			<field name="force_beforetabs" type="radio" default="1" label="Force before tabs editor textarea" description="Display editor area even if no text exists">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
			<field name="force_aftertabs" type="radio" default="1" label="Force after tabs editor textarea" description="Display editor area even if no text exists">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
			<field name="start_of_tabs_pattern" type="text" default="" size="80" label="Start of tabs pattern" description="..." />
			<field name="start_of_tabs_default_text" type="textarea" default="" cols="45" rows="4" label="start of tabs default text" description="..." />
			<field name="start_of_tab_pattern" type="text" default="" size="80" label="Start of tab pattern" description="..." />
			
			<field name="title_tab_pattern" type="text" default="" size="80" label="Tab title pattern" description="..." />
			<field name="default_tab_list" type="textarea" default="" cols="45" rows="4" label="Default tab list" description="..." />
			
			<field name="end_of_tab_pattern" type="text" default="" size="80" label="End of tab" description="Can be empty for some type of tabs" />
			<field name="end_of_tabs_pattern" type="text" default="" size="80" label="End of tabs" description="..." />
			
		</fieldset>
	</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_textarea.ini</language>
	</languages>
</extension>
