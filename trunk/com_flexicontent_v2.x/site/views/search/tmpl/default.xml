<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Search">
		<message>
			<![CDATA[STANDARD SEARCH LAYOUT DESC]]>
		</message>
	</layout>
	<fields name="params">
	<fieldset name="basic" addfieldpath="/administrator/components/com_flexicontent/elements">
		<field name="" type="separator" default="Searching" level="level1" menu="hide" />
		<field name="searchkeywordlabel" type="text" default="Search Keyword" label="Search Keyword Label" description="Search Keyword Label" />
		<field name="show_operator" type="radio" default="1" label="Show Operator" description="Show Operator">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</field>
		<field name="default_operator" type="radio" default="OR" label="Default Operator" description="Default Operator">
			<option value="OR">FLEXI_OR</option>
			<option value="AND">FLEXI_AND</option>
		</field>
		<field name="operator_desc" type="textarea" cols="40" rows="10" default="FLEXI_OPERATOR_DESC" label="Operator description" description="Operator description" />
		<field name="fieldtypes" type="types" default="" label="Types" description="What type that you want to search in?" multiple="1" />
		<field name="cantypes" type="radio" default="1" label="Allow users select type" description="Allow users select type">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</field>
		<field name="listfields" type="fields" default="" label="List Fields" description="Please select fields to help you with 'Fields' textarea below." fieldnameastext="1" fieldnameasvalue="1" isadvsearch="1"  onchange="javascript:f=document.getElementById('jform_params_search_fields');if(f.value)f.value+=','+this.value;else f.value=this.value;this.value='';" />
		<field name="search_fields" type="textarea" default="" label="Fields" description="Input field name(s) that you want to display.You can separate each field by comma(,)." cols="40" rows="10" />
		<field name="show_searchphrase" type="radio" default="1" label="Show Search Phrase" description="Show Search Phrase radio button">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</field>
		<field name="default_searchphrase" type="list" default="all" label="Default value Search Phrase" description="Default value of Search Phrase radio button">
			<option value="all">All words</option>
			<option value="any">Any words</option>
			<option value="exact">Exact phrase</option>
		</field>
		<field name="show_searchordering" type="radio" default="1" label="Show Search Results Ordering" description="Show search result ordering">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</field>
		<field name="default_searchordering" type="list" default="newest" label="Default value Search Phrase" description="Default value of Search Phrase radio button">
			<option value="newest">Newest first</option>
			<option value="oldest">Oldest first</option>
			<option value="popular">Most popular</option>
			<option value="alpha">Alphabetical</option>
			<option value="category">Section/Category</option>
		</field>
		<field name="show_searchareas" type="radio" default="0" label="Show Search Areas" description="Show search areas">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</field>
		<field name="autodisplayextrafields" type="radio" default="1" label="Auto display extra fields" description="Auto display extra fields.If yes, the extra fields will displayed on search view, if no, the 'Advanced Search' link text will displayed.You can set 'Advanced Search' link text on below.">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</field>
		<field name="linkadvsearch_txt" type="text" default="Advanced Search" label="Advanced Search Text" description="Advanced Search Text" />
	</fieldset>
	</fields>
</metadata>
