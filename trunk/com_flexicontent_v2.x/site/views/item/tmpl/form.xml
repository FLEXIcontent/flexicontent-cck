<?xml version="1.0" encoding="utf-8"?>
<metadata>
	
	<layout title="FLEXICONTENT_ITEM_SUBMISSION">
		<message>
			<![CDATA[FLEXICONTENT_ITEM_SUBMISSION_TIP]]>
		</message>
	</layout>
	
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="typeid" type="types" default="1" label="FLEXI_SELECT_TYPE" description="FLEXI_SELECT_TYPE_DESC" /> 
		</fieldset>
	</fields>
		
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_flexicontent/elements">
				<field name="cid" type="flexicategories" multiple="true" default="" label="FLEXI_MENU_SELECT_CATS" description="FLEXI_MENU_SELECT_CATS_DESC" />
				<field name="usemetadata" type="radio" default="1" label="FLEXI_MENU_USE_META" description="FLEXI_MENU_USE_META_DESC">
					<option value="0">NO</option>
					<option value="1">YES</option>
				</field>
				<field name="autopublished" type="radio" default="0" label="FLEXI_MENU_AUTOPUBLISH" description="FLEXI_MENU_AUTOPUBLISH_DESC">
					<option value="0">NO</option>
					<option value="1">YES</option>
				</field>
				<field name="allowunauthorize" type="radio" default="0" label="Allow unauthorized users" description="Allow unauthorized users to add article.">
					<option value="0">NO</option>
					<option value="1">YES</option>
				</field>
				<field name="notauthurl" type="menuitem" default="" disable="separator" label="FLEXI_UNAUTHORIZED_PAGE" description="FLEXI_UNAUTHORIZED_PAGE_DESC" />
			</fieldset>
		</fields>
		
</metadata>
