<?xml version="1.0" encoding="utf-8"?>
<metadata>
	
	<layout title="FLEXICONTENT_ITEM_SUBMISSION">
		<message>
			<![CDATA[FLEXICONTENT_ITEM_SUBMISSION_TIP]]>
		</message>
	</layout>
	
	<fields name="request">
		<fieldset name="request" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="typeid" type="types" default="1" label="FLEXI_SELECT_TYPE" description="FLEXI_SELECT_TYPE_DESC" /> 
		</fieldset>
	</fields>
		
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_flexicontent/elements">
				<field name="maincatid" type="flexicategories" multiple="false" required="false" size="1" default="" label="FLEXI_MENU_DEFAULT_MAIN_CATEGORY" description="FLEXI_MENU_DEFAULT_MAIN_CATEGORY_DESC" />			
				
				<field name="separator1" label="" type="separator" default="FLEXI_OVERRIDE_USER_CATEGORY_PERMS" level="level2" menu="hide" />
				
				<field name="overridecatperms" type="radio" default="1" label="FLEXI_MENU_ENABLE_CATPERMS_OVERRIDE" description="FLEXI_MENU_ENABLE_CATPERMS_OVERRIDE_DESC">
					<option value="0">FLEXI_NO</option>
					<option value="1">FLEXI_YES</option>
				</field>
					
				<field name="postcats" type="radio" default="2" label="FLEXI_MENU_CHOOSE_CATS" description="FLEXI_MENU_CHOOSE_CATS_DESC">
					<option value="0">SUBMIT_IN_ALL_DISPLAYED_CATS</option>
					<option value="1">SUBMIT_IN_ONE_CAT</option>
					<option value="2">SUBMIT_IN_MULTIPLE_CATS</option>
				</field>
				
				<field name="cid" type="flexicategories" multiple="true" required="false" default="" label="FLEXI_MENU_DISPLAYED_CATS" description="FLEXI_MENU_DISPLAYED_CATS_DESC" />
				
				<field name="separator2" label="" type="separator" default="FLEXI_OVERRIDE_OTHER_PERMS" level="level2" menu="hide" />
				
				<field name="allowunauthorize" type="radio" default="0" label="FLEXI_MENU_ALLOW_UNAUTHORIZED_USERS" description="FLEXI_MENU_ALLOW_UNAUTHORIZED_USERS_DESC">
					<option value="0">FLEXI_NO</option>
					<option value="1">FLEXI_YES</option>
					<option value="2">FLEXI_MENU_YES_EXCLUDE_GUESTS</option>
				</field>
				
				<field name="usemetadata" type="radio" default="1" label="FLEXI_MENU_USE_META" description="FLEXI_MENU_USE_META_DESC">
					<option value="0">FLEXI_NO</option>
					<option value="1">FLEXI_YES</option>
				</field>
				
				<field name="autopublished" type="radio" default="0" label="FLEXI_MENU_AUTOPUBLISH" description="FLEXI_MENU_AUTOPUBLISH_DESC">
					<option value="0">FLEXI_NO</option>
					<option value="1">FLEXI_YES</option>
				</field>
				<field name="notauthurl" type="menuitem" default="" disable="separator" label="FLEXI_UNAUTHORIZED_PAGE" description="FLEXI_UNAUTHORIZED_PAGE_DESC" />
			</fieldset>
		</fields>
		
</metadata>
