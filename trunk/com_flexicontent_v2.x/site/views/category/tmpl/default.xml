<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="FLEXICONTENT_CATEGORY">
		<message>
			<![CDATA[FLEXICONTENT_CATEGORY_TIP]]>
		</message>
	</layout>
	<fields name="request" addfieldpath="/administrator/components/com_flexicontent/elements">
		<fieldset name="request">
			<field name="cid" type="qfcategory" default="0" label="FLEXI_SELECT_ONE_CATEGORY" required="required" description="FLEXI_SELECT_ONE_CATEGORY_DESC" />
		</fieldset> 
	</fields>
	<fields name="params" addfieldpath="/administrator/components/com_flexicontent/elements">
		<fieldset name="basic">
			<field name="item_depth" type="list" default="O" label="FLEXI_ITEM_DEPTH" description="FLEXI_ITEM_DEPTH_DESC"> 
				<option value="0">FLEXI_ROOT</option> 
				<option value="1">FLEXI_LEVEL_1</option> 
				<option value="2">FLEXI_LEVEL_2</option> 
				<option value="3">FLEXI_LEVEL_3</option> 
				<option value="4">FLEXI_LEVEL_4</option> 
				<option value="5">FLEXI_LEVEL_5</option> 
			</field>
			<field name="add_item_pathway" type="radio" default="1" label="FLEXI_ADD_ITEM_PATHWAY" description="FLEXI_ADD_ITEM_PATHWAY_DESC"> 
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option> 
			</field>
			<field name="featured" type="list" default="" label="FLEXI_FEATURED_ITEMS" description="FLEXI_FEATURED_ITEMS_DESC"> 
				<option value="">FLEXI_SHOW_BOTH</option>
				<option value="show">FLEXI_FEATURED_ONLY</option> 
				<option value="hide">FLEXI_NORMAL_ONLY</option> 
			</field>
		</fieldset>
	</fields>
</metadata>
