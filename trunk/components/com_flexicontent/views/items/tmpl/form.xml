<?xml version="1.0" encoding="utf-8"?>
<metadata>
	
	<layout title="FLEXICONTENT_ITEM_SUBMISSION">
		<message>
			<![CDATA[FLEXICONTENT_ITEM_SUBMISSION_TIP]]>
		</message>
	</layout>
	<state>
		<name>FLEXICONTENT_ITEM_SUBMISSION</name>
		<description>FLEXICONTENT_ITEM_SUBMISSION_DESC</description>
		<url addpath="/administrator/components/com_flexicontent/elements">
			<param name="typeid" type="types" default="" label="FLEXI_SELECT_TYPE" description="FLEXI_SELECT_TYPE_DESC" /> 
		</url>
		
		<params addpath="/administrator/components/com_flexicontent/elements">

			<param name="" label="" type="separator" default="FLEXI_GENERAL_FORM_BEHAVIOR" level="level2" menu="hide" />

			<param name="allowunauthorize" type="radio" default="0" label="FLEXI_MENU_ALLOW_UNAUTHORIZED_USERS" description="FLEXI_MENU_ALLOW_UNAUTHORIZED_USERS_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
				<option value="2">FLEXI_MENU_YES_EXCLUDE_GUESTS</option>
			</param>
			<param name="notauthurl" type="menuitem" default="" disable="separator" label="FLEXI_UNAUTHORIZED_PAGE" description="FLEXI_UNAUTHORIZED_PAGE_DESC" />
			<param name="autopublished" type="list" default="0" label="FLEXI_MENU_AUTOPUBLISH" description="FLEXI_MENU_AUTOPUBLISH_DESC">
				<option value="0">FLEXI_MENU_AUTOPUBLISH_NO_LET_USER_CHOOSE</option>
				<option value="1">FLEXI_MENU_AUTOPUBLISH_YES_HIDE_STATE</option>
			</param>

			<param name="" label="" type="separator" default="FLEXI_OVERRIDE_USER_CATEGORY_TREE" level="level2" menu="hide" />

			<param name="overridecatperms" type="radio" default="1" label="FLEXI_MENU_ENABLE_CATPERMS_OVERRIDE" description="FLEXI_MENU_ENABLE_CATPERMS_OVERRIDE_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</param>
			<param name="cid" type="flexicategories" multiple="true" size="12" required="false" default="" label="FLEXI_MENU_DISPLAYED_CATS" description="FLEXI_MENU_DISPLAYED_CATS_DESC" />
			<param name="postcats" type="radio" default="2" label="FLEXI_MENU_CHOOSE_CATS" description="FLEXI_MENU_CHOOSE_CATS_DESC">
				<option value="0">SUBMIT_IN_ALL_ABOVE_CATS</option>
				<option value="1">SUBMIT_IN_ONE_CAT</option>
				<option value="2">SUBMIT_IN_MULTIPLE_CATS</option>
			</param>
			<param name="maincatid" type="flexicategories" top="2" multiple="false" required="false" size="1" default="" label="FLEXI_MENU_DEFAULT_MAIN_CATEGORY" description="FLEXI_MENU_DEFAULT_MAIN_CATEGORY_DESC" />

			<param name="" label="" type="separator" default="FLEXI_MENU_SIMPLIFY_ITEM_FORM" description="FLEXI_MENU_SIMPLIFY_ITEM_FORM_DESC"  level="level2" menu="hide" />
			
			<param name="allowbuttons_fe" type="fccheckbox" default="" display_useglobal="1"
				checkoptions="FLEXI_APPLY,FLEXI_SAVE_A_PREVIEW,FLEXI_PREVIEW_LATEST" checkvals="apply,save_preview,preview_latest" defaultvals=""
				label="FLEXI_MENU_ALLOW_BUTTONS" description="FLEXI_MENU_ALLOW_BUTTONS_DESC" />
			<param name="usealias_fe" type="radio" default="" label="FLEXI_MENU_USE_ALIAS" description="FLEXI_MENU_USE_ALIAS_DESC">
				<option value="">FLEXI_USE_GLOBAL</option>
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</param>
			<param name="usetags_fe" type="radio" default="1" label="FLEXI_MENU_USE_TAGS" description="FLEXI_MENU_USE_TAGS_DESC">
				<option value="">FLEXI_USE_GLOBAL</option>
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
				<option value="2">FLEXI_MENU_ONLY_DISPLAY</option>
			</param>
			<param name="usemetadata_fe" type="radio" default="" label="FLEXI_MENU_USE_METADATA" description="FLEXI_MENU_USE_METADATA_DESC">
				<option value="">FLEXI_USE_GLOBAL</option>
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_MENU_YES_BASIC_RECOMMENDED</option>
				<option value="2">FLEXI_MENU_YES_ALL_STAR</option>
			</param>
			<param name="usepublicationdetails_fe" type="radio" default="" label="FLEXI_MENU_USE_PUBL_DETAILS" description="FLEXI_MENU_USE_PUBL_DETAILS_DESC">
				<option value="">FLEXI_USE_GLOBAL</option>
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_MENU_YES_BASIC_RECOMMENDED</option>
				<option value="2">FLEXI_MENU_YES_ALL_STAR</option>
			</param>
			<param name="useitemparams_fe" type="fccheckbox" default="" display_useglobal="1"
				checkoptions="FLEXI_PARAMETERS_ITEM_BASIC,FLEXI_PARAMETERS_ITEM_ADVANCED,FLEXI_PARAMETERS_ITEM_SEOCONF" checkvals="basic,advanced,seoconf" defaultvals=""
				label="FLEXI_MENU_USE_ITEM_PARAMETERS" description="FLEXI_MENU_USE_ITEM_PARAMETERS_DESC" />
			<param name="selecttheme_fe" type="radio" default="" label="FLEXI_MENU_SELECT_THEME" description="FLEXI_MENU_SELECT_THEME_DESC">
				<option value="">FLEXI_USE_GLOBAL</option>
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_MENU_YES_SELECT_THEME</option>
				<option value="2">FLEXI_MENU_YES_SELECT_CONFIGURE_THEME</option>
			</param>
			
		</params>
	</state>
		
</metadata>
