<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<author>Emmanuel Danan</author>
	<website>www.flexicontent.org</website>
	<email>emmanuel@vistamedia.fr</email>
	<license>GPLv2</license>
	<version>1.1</version>
	<release>25 november 2009</release>
	<description>This HTML5 layout presents category items as faq like listings. Each field put in the aftertitle position will be rendered in a separate row</description>
	<params addpath="/administrator/components/com_flexicontent/elements">
		<param name="description_cut_text" type="text" size="3" default="180" label="FLEXI_CATDESCR_MAXLEN" description="FLEXI_CATDESCR_MAXLEN_DESC" />
		<param name="tmpl_cols" type="list" default="2" label="FLEXI_SUBCAT_COLS" description="FLEXI_SUBCAT_COLS_DESC">
			<option value="1">FLEXI_1_COL</option>
			<option value="2">FLEXI_2_COLS</option>
			<option value="3">FLEXI_3_COLS</option>
			<option value="4">FLEXI_4_COLS</option>
		</param>

		<param name="" type="separator" default="FLEXI_SUBCATEGORY_INFO" description="FLEXI_SUBCATEGORY_INFO_DESC" level="level2" hr="false" menu="hide" />
		<param name="show_description_image_subcat" type="radio" default="1" label="FLEXI_CAT_IMAGE" description="FLEXI_CAT_IMAGE_DESC">
			<option value="0">FLEXI_HIDE</option>
			<option value="1">FLEXI_SHOW</option>
		</param>
		<param name="subcat_image_source" type="list" default="2" label="FLEXI_CATIMAGE_SOURCE" description="FLEXI_CATIMAGE_SOURCE_DESC" >
			<option value="0">FLEXI_CAT_IMAGE_EXTRACT</option>
			<option value="1">FLEXI_CAT_IMAGE_USEPARAM</option>
			<option value="2">FLEXI_CAT_IMAGE_BOTH</option>
		</param>
		<param name="subcat_link_image" type="radio" default="1" label="FLEXI_LINK_IMAGE" description="FLEXI_LINK_IMAGE_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		<param name="subcat_image_method" type="radio" default="1" label="FLEXI_PROCESSING_METHOD" description="FLEXI_PROCESSING_METHOD_DESC">
			<option value="0">FLEXI_SCALE</option>
			<option value="1">FLEXI_CROP</option>
		</param>		
		<param name="subcat_image_width" type="text" size="4" default="24" label="FLEXI_IMAGE_WIDTH" description="FLEXI_IMAGE_WIDTH" />
		<param name="subcat_image_height" type="text" size="4" default="24" label="FLEXI_IMAGE_HEIGHT" description="FLEXI_IMAGE_HEIGHT" />
		
		<param name="show_description_subcat" type="radio" default="1" label="FLEXI_CAT_DESCRIPTION" description="FLEXI_CAT_DESCRIPTION_DESC">
			<option value="0">FLEXI_HIDE</option>
			<option value="1">FLEXI_SHOW</option>
		</param>
		<param name="description_cut_text_subcat" type="text" size="3" default="120" label="FLEXI_CATDESCR_MAXLEN" description="FLEXI_CATDESCR_MAXLEN_DESC" />
		
		<param name="templatehtmlmode" type="separator" hr="false" default="FLEXI_TEMPALTE_HTML_MODE" level="level2" menu="hide" />
		<param name="htmlmode" type="list" default="0" label="FLEXI_HTML_MODE" description="FLEXI_HTML_MODE_DESC" filter="int">
			<option value="0">FLEXI_XHTML</option>
			<option value="1">FLEXI_HTML5</option>
		</param>
	</params>
	<fieldgroups>
		<group readonly="true">subcategory_title</group>
		<group readonly="true">subcategory_description</group>
		<group>aftertitle</group>
	</fieldgroups>
	<csscategory>
		<file>css/category.css</file>
	</csscategory>
	<jscategory>
	</jscategory>	
</metadata>
