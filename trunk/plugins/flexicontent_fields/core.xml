			<option value="0">FLEXI_DISABLE</option>
			<option value="1">FLEXI_ENABLE</option>
			<option value="2">FLEXI_FIELD_VOTE_DISABLE_IN_EXTRA_VOTES</option>
			<option value="3">FLEXI_FIELD_VOTE_DISABLE_IN_MAIN_VOTE</option>
		</param>
		
		<param name="" type="separator" default="FLEXI_EXTRA_VOTES" level="level2" menu="hide" />
		<param name="enable_extra_votes" type="radio" default="0" label="FLEXI_ENABLE_VOTE_EXTRA" description="FLEXI_ENABLE_VOTE_EXTRA_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		<param name="extra_votes" type="textarea" default="" rows="4" cols="30" label="FLEXI_FIELD_VOTE_EXTRA" description="FLEXI_FIELD_VOTE_EXTRA_DESC" />
		<param name="main_label" type="text" default="" size="30" label="FLEXI_FIELD_VOTE_MAIN_LABEL" description="FLEXI_FIELD_VOTE_MAIN_LABEL_DESC" />		
