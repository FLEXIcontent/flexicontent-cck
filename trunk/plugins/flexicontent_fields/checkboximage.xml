<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Checkbox (or Multi-Select) image</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_CHECKBOXIMAGE</description>
	<files>
		<filename plugin="checkboximage">checkboximage.php</filename>
	</files>
	<params group="standard">
		<param name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
	</params>
	<params group="group-checkboximage">
		<param name="display_as_select" type="radio" default="0" label="FLEXI_FIELD_CONVERT_TO_MULTIPLE_SELECT" description="FLEXI_FIELD_CONVERT_TO_MULTIPLE_SELECT_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		<param name="size" type="text" default="6" size="2" label="FLEXI_FIELD_SIZE" description="FLEXI_FIELD_SIZE_DESC" />
		<param name="firstoptiontext" type="text" default="Please Select" label="First option text" description="First option text." />
		<param name="usefirstoption" type="radio" default="1" label="Use first option" description="Use 'Please Select' option, if you don't need to use this option you can click No.">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		
		<param name="field_elements" type="textarea" default="" class="required" rows="5" cols="25" label="FLEXI_FIELD_ELEMENTS" description="FLEXI_FIELD_ELEMENTS_DESC" />
		<param name="imagedir" type="text" default="images/stories/" class="required" label="FLEXI_FIELD_IMAGEDIR" description="FLEXI_FIELD_IMAGEDIR_DESC" />
		<param name="default_values" type="text" default="" label="FLEXI_FIELD_DEFAULT_VALUES" description="FLEXI_FIELD_DEFAULT_VALUES_DESC" />
		<param name="separator" type="list" default="0" label="FLEXI_FIELD_SEPARATOR_BACKEND" description="FLEXI_FIELD_SEPARATOR_BACKEND_DESC">
			<option value="0">FLEXI_SPACE</option>
			<option value="1">FLEXI_LINE_BREAK</option>
			<option value="2">FLEXI_PIPE</option>
			<option value="3">FLEXI_COMMA</option>
		</param>
		<param name="separatorf" type="list" default="1" label="FLEXI_FIELD_SEPARATOR_FRONTEND" description="FLEXI_FIELD_SEPARATOR_FRONTEND_DESC">
			<option value="0">FLEXI_SPACE</option>
			<option value="1">FLEXI_LINE_BREAK</option>
			<option value="2">FLEXI_PIPE</option>
			<option value="3">FLEXI_COMMA</option>
			<option value="4">FLEXI_CONVERT_OPEN_CLOSE_TEXTS_TO_SEPARATOR</option>
		</param>
		<param name="opentag" type="text" default="" label="FLEXI_FIELD_OPENING_TEXT" description="FLEXI_FIELD_OPENING_TEXT_DESC" />
		<param name="closetag" type="text" default="" label="FLEXI_FIELD_CLOSING_TEXT" description="FLEXI_FIELD_CLOSING_TEXT_DESC" />
		<param name="display_label_filter" type="radio" default="0" label="FLEXI_LABEL_FILTER" description="FLEXI_LABEL_FILTER_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_BEFORE_SELECT</option>
			<option value="2">FLEXI_IN_SELECT</option>
		</param>
		<param name="required" type="radio" default="0" label="FLEXI_REQUIRED" description="FLEXI_REQUIRED_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
	</params>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_checkboximage.ini</language>
		<language tag="fr-FR">fr-FR.plg_flexicontent_fields_checkboximage.ini</language>
		<language tag="ru-RU">ru-RU.plg_flexicontent_fields_checkboximage.ini</language>
		<language tag="de-DE">de-DE.plg_flexicontent_fields_checkboximage.ini</language>
	</languages>
</install>
