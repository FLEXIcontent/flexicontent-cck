				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</param>
		</params>
		<params group="group-image" addpath="/administrator/components/com_flexicontent/elements">
			
			<param name="" type="separator" default="FLEXI_BASIC_PARAMS_LABEL" level="level1" />
			
			<param name="default_image" type="text" default="" size="60" label="FLEXI_FIELD_DEFAULT_IMAGE" description="FLEXI_FIELD_DEFAULT_IMAGE_DESC" />
			<param name="upload_extensions" type="text" default="bmp,gif,jpg,jpeg,png,BMP,GIF,JPG,JPEG,PNG" size="60" label="FLEXI_LEGAL_EXTENSIONS_LABEL" description="FLEXI_LEGAL_EXTENSIONS_DESC" />
