			</param>
			<param name="grouptype" type="list" default="1" label="FLEXI_FIELD_GROUP_IMAGE_FIELDS" description="FLEXI_FIELD_GROUP_IMAGE_FIELDS_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_FIELD_GROUP_PER_ITEM</option>
				<option value="2">FLEXI_FIELD_GROUP_PER_VIEW</option>
			</param>
			<param name="" type="separator" default="FLEXI_IMGFIELD_THUMBNAILS" level="level2" />
			<param name="thumbinitemview" type="list" default="2" label="FLEXI_FIELD_THUMB_IN_ITEM" description="FLEXI_FIELD_THUMB_IN_ITEM_DESC">
