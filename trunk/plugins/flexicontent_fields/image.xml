<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Image</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_IMAGE</description>
	<files>
		<filename plugin="image">image.php</filename>
		<filename plugin="image">image/index.html</filename>
		<filename plugin="image">image/watermarks/index.html</filename>
		<filename plugin="image">image/watermarks/wm_l.png</filename>
		<filename plugin="image">image/watermarks/wm_m.png</filename>
		<filename plugin="image">image/watermarks/wm_s.png</filename>
	</files>
	<params group="standard">
		<param name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<params group="group-image" addpath="/administrator/components/com_flexicontent/elements">
		<param name="upload_extensions" type="text" default="bmp,gif,jpg,jpeg,png,BMP,GIF,JPG,JPEG,PNG" label="FLEXI_LEGAL_EXTENSIONS_LABEL" description="FLEXI_LEGAL_EXTENSIONS_DESC" />
		<param name="upload_maxsize" type="text" default="10000000" label="FLEXI_MAXIMUM_SIZE_LABEL" description="FLEXI_MAXIMUM_SIZE_DESC" />
		<param name="quality" type="text" default="90" size="4" label="FLEXI_FIELD_IMAGE_QUALITY" description="FLEXI_FIELD_IMAGE_QUALITY_DESC" />
		<param name="dir" type="text" default="images/stories/flexicontent" label="FLEXI_FIELD_IMAGE_DIRECTORY" description="FLEXI_FIELD_IMAGE_DIRECTORY_DESC" />
		<param name="wm_opacity" type="text" default="100" size="4" label="FLEXI_FIELD_IMAGE_WM_TRANS" description="FLEXI_FIELD_IMAGE_WM_TRANS_DESC" />
		<param name="wm_position" type="list" default="BR" label="FLEXI_FIELD_IMAGE_WM_POS" description="FLEXI_FIELD_IMAGE_WM_POS_DESC">
			<option value="*">FLEXI_FIELD_REPEAT</option>
			<option value="C">FLEXI_FIELD_MIDDLE</option>
			<option value="TL">FLEXI_FIELD_TOP_LEFT</option>
			<option value="T">FLEXI_FIELD_TOP_CENTER</option>
			<option value="TR">FLEXI_FIELD_TOP_RIGHT</option>
			<option value="BL">FLEXI_FIELD_BOTTOM_LEFT</option>
			<option value="B">FLEXI_FIELD_BOTTOM_CENTER</option>
			<option value="BR">FLEXI_FIELD_BOTTOM_RIGHT</option>
		</param>

		<param name="" type="separator" default="FLEXI_LARGE_IMAGES" level="level1" menu="hide" />
		<param name="w_l" type="text" default="600" size="4" label="FLEXI_FIELD_IMAGE_WIDTH" description="FLEXI_FIELD_IMAGE_WIDTH_DESC" />
		<param name="h_l" type="text" default="600" size="4" label="FLEXI_FIELD_IMAGE_HEIGHT" description="FLEXI_FIELD_IMAGE_HEIGHT_DESC" />
		<param name="method_l" type="radio" default="0" label="FLEXI_FIELD_IMAGE_METHOD" description="FLEXI_FIELD_IMAGE_METHOD_DESC">
			<option value="0">FLEXI_SCALE</option>
			<option value="1">FLEXI_CROP</option>
		</param>
		<param name="use_watermark_l" type="radio" default="1" label="FLEXI_FIELD_IMAGE_USE_WM" description="FLEXI_FIELD_IMAGE_USE_WM_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="wm_l" type="text" default="plugins/flexicontent_fields/image/watermarks/wm_l.png" label="FLEXI_FIELD_IMAGE_WM" description="FLEXI_FIELD_IMAGE_WM_DESC" />

		<param name="" type="separator" default="FLEXI_MEDIUM_IMAGES" level="level1" menu="hide" />
		<param name="w_m" type="text" default="300" size="4" label="FLEXI_FIELD_IMAGE_WIDTH" description="FLEXI_FIELD_IMAGE_WIDTH_DESC" />
		<param name="h_m" type="text" default="200" size="4" label="FLEXI_FIELD_IMAGE_HEIGHT" description="FLEXI_FIELD_IMAGE_HEIGHT_DESC" />
		<param name="method_m" type="radio" default="0" label="FLEXI_FIELD_IMAGE_METHOD" description="FLEXI_FIELD_IMAGE_METHOD_DESC">
			<option value="0">FLEXI_SCALE</option>
			<option value="1">FLEXI_CROP</option>
		</param>
		<param name="use_watermark_m" type="radio" default="1" label="FLEXI_FIELD_IMAGE_USE_WM" description="FLEXI_FIELD_IMAGE_USE_WM_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="wm_m" type="text" default="plugins/flexicontent_fields/image/watermarks/wm_m.png" label="FLEXI_FIELD_IMAGE_WM" description="FLEXI_FIELD_IMAGE_WM_DESC" />

		<param name="" type="separator" default="FLEXI_SMALL_IMAGES" level="level1" menu="hide" />
		<param name="w_s" type="text" default="150" size="4" label="FLEXI_FIELD_IMAGE_WIDTH" description="FLEXI_FIELD_IMAGE_WIDTH_DESC" />
		<param name="h_s" type="text" default="150" size="4" label="FLEXI_FIELD_IMAGE_HEIGHT" description="FLEXI_FIELD_IMAGE_HEIGHT_DESC" />
		<param name="method_s" type="radio" default="1" label="FLEXI_FIELD_IMAGE_METHOD" description="FLEXI_FIELD_IMAGE_METHOD_DESC">
			<option value="0">FLEXI_SCALE</option>
			<option value="1">FLEXI_CROP</option>
		</param>
		<param name="use_watermark_s" type="radio" default="1" label="FLEXI_FIELD_IMAGE_USE_WM" description="FLEXI_FIELD_IMAGE_USE_WM_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="wm_s" type="text" default="plugins/flexicontent_fields/image/watermarks/wm_s.png" label="FLEXI_FIELD_IMAGE_WM" description="FLEXI_FIELD_IMAGE_WM_DESC" />

		<param name="" type="separator" default="FLEXI_DISPLAY_OPTIONS" level="level1" menu="hide" />
		<param name="uselegend" type="radio" default="1" label="FLEXI_FIELD_IMAGE_USE_LEGEND" description="FLEXI_FIELD_IMAGE_USE_LEGEND_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="usepopup" type="radio" default="1" label="FLEXI_FIELD_IMAGE_USE_POPUP" description="FLEXI_FIELD_IMAGE_USE_POPUP_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="popuptype" type="list" default="1" label="FLEXI_FIELD_IMAGE_POPUP_TYPE" description="FLEXI_FIELD_IMAGE_POPUP_TYPE_DESC">
			<option value="1">FLEXI_FIELD_IMAGE_MULTIBOX</option>
			<option value="2">FLEXI_FIELD_IMAGE_ROKBOX</option>
			<option value="3">FLEXI_FIELD_IMAGE_JCEMEDIABOX</option>
		</param>
		<param name="thumbinitemview" type="list" default="1" label="FLEXI_FIELD_THUMB_IN_ITEM" description="FLEXI_FIELD_THUMB_IN_ITEM_DESC">
			<option value="1">Small</option>
			<option value="2">Medium</option>
			<option value="3">Large</option>
		</param>
		<param name="thumbincatview" type="list" default="2" label="FLEXI_FIELD_THUMB_IN_CAT" description="FLEXI_FIELD_THUMB_IN_CAT_DESC">
			<option value="1">Small</option>
			<option value="2">Medium</option>
			<option value="3">Large</option>
		</param>
		<param name="showtitle" type="list" default="0" label="FLEXI_FIELD_SHOW_TITLE" description="FLEXI_FIELD_SHOW_TITLE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="showdesc" type="list" default="0" label="FLEXI_FIELD_SHOW_LONGDESC" description="FLEXI_FIELD_SHOW_LONGDESC_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="" type="separator" default="FLEXI_EDIT_OPTIONS" level="level1" menu="hide" />
		<param name="linkto_url" type="radio" default="0" label="FLEXI_FIELD_LINKTO_URL" description="FLEXI_FIELD_LINKTO_URL_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="url_target" type="list" default="_self" label="FLEXI_FIELD_URL_TARGET" description="FLEXI_FIELD_URL_TARGET_DESC">
			<option value="_self">FLEXI_FIELD_SAME_FRM_WIN_TAB</option>
			<option value="_blank">FLEXI_FIELD_NEW_WIN_TAB</option>
			<option value="multibox">FLEXI_FIELD_MODAL_POPUP_WIN</option>
		</param>
		<param name="autoupload" type="radio" default="0" label="FLEXI_FIELD_IMAGE_AUTOUPLOAD" description="FLEXI_FIELD_IMAGE_USE_AUTOUPLOAD_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="list_all_media_files" type="radio" default="0" label="FLEXI_LIST_ALL_MEDIA_FILES" description="FLEXI_LIST_ALL_MEDIA_FILES_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="always_allow_removal" type="radio" default="0" label="FLEXI_ALWAYS_ALLOW_IMAGE_REMOVAL" description="FLEXI_ALWAYS_ALLOW_IMAGE_REMOVAL_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="limit_by_uploader" type="radio" default="0" label="FLEXI_LIMIT_BY_UPLOADER" description="FLEXI_LIMIT_BY_UPLOADER_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="required" type="radio" default="0" label="FLEXI_FIELD_REQUIRED" description="FLEXI_FIELD_REQUIRED_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_image.ini</language>
		<language tag="fr-FR">fr-FR.plg_flexicontent_fields_image.ini</language>
		<language tag="ru-RU">ru-RU.plg_flexicontent_fields_image.ini</language>
		<language tag="de-DE">de-DE.plg_flexicontent_fields_image.ini</language>
	</languages>
</install>
