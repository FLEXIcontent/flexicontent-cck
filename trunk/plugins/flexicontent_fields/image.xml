			</param>
			<param name="showdesc" type="list" default="0" label="FLEXI_FIELD_SHOW_LONGDESC" description="FLEXI_FIELD_SHOW_LONGDESC_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</param>
			<param name="" type="separator" default="FLEXI_EDIT_OPTIONS" level="level1" />
