				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</param>
			<param name="wm_m" type="text" default="plugins/flexicontent_fields/image/watermarks/wm_m.png" size="60" label="FLEXI_FIELD_IMAGE_WM" description="FLEXI_FIELD_IMAGE_WM_DESC" />

