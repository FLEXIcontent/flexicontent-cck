<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
	<name>System - FLEXIcontent advanced route</name>
	<author>Emmanuel Danan</author>
	<creationDate>July 2010</creationDate>
	<copyright>Copyright (C) 2010 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>System plugin for advanced FLEXIcontent routing</description>
	<files>
		<filename plugin="flexiadvroute">flexiadvroute.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_flexiadvroute.ini</language>
		<language tag="fr-FR">fr-FR.plg_system_flexiadvroute.ini</language>
	</languages>
	<params addpath="/administrator/components/com_flexicontent/elements">
		<param name="route_to_type" type="radio" default="0" label="FLEXI_ADVROUTE_TO_TYPE" description="FLEXI_ADVROUTE_TO_TYPE_DESC">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		<param name="type_to_route" type="types" default="" label="FLEXI_ADVROUTE_TYPES_TO_ROUTE" description="FLEXI_ADVROUTE_TYPES_TO_ROUTE_DESC" />
		<param name="cats_to_exclude" type="flexicategories" default="" label="FLEXI_ADVROUTE_CATS_TO_EXCLUDE" description="FLEXI_ADVROUTE_CATS_TO_EXCLUDE_DESC" />
	</params>
</install>