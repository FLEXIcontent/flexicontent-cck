<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
	<name>System - FLEXIcontent</name>
	<author>Emmanuel Danan</author>
	<creationDate>June 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.1</version>
	<description>FLEXI_PLUGIN_SYSTEM</description>
	<files>
		<filename plugin="flexisystem">flexisystem.php</filename>
	</files>
	
	<languages>
		<language tag="en-GB">en-GB.plg_system_flexisystem.ini</language>
	</languages>
	
	<params addpath="/administrator/components/com_flexicontent/elements">
		<param name="" type="separator" default="URL redirections" hr="false" level="level2" menu="hide" />
		<param name="redirect_sections" type="list" default="24" label="FLEXI_SYSTEM_REDIRECT_SECTION" description="FLEXI_SYSTEM_REDIRECT_SECTION_DESC">
			<option value="23">FLEXI_SYSTEM_NO_REDIRECT</option>
			<option value="23">MANAGER</option>
			<option value="24">ADMINISTRATOR</option>
			<option value="25">SUPER ADMINISTRATOR</option>
		</param>
		<param name="redirect_cats" type="list" default="24" label="FLEXI_SYSTEM_REDIRECT_CATS" description="FLEXI_SYSTEM_REDIRECT_CATS_DESC">
			<option value="23">FLEXI_SYSTEM_NO_REDIRECT</option>
			<option value="23">MANAGER</option>
			<option value="24">ADMINISTRATOR</option>
			<option value="25">SUPER ADMINISTRATOR</option>
		</param>
		<param name="redirect_articles" type="list" default="24" label="FLEXI_SYSTEM_REDIRECT_ARTICLES" description="FLEXI_SYSTEM_REDIRECT_ARTICLES_DESC">
			<option value="23">FLEXI_SYSTEM_NO_REDIRECT</option>
			<option value="23">MANAGER</option>
			<option value="24">ADMINISTRATOR</option>
			<option value="25">SUPER ADMINISTRATOR</option>
		</param>
		<param name="excluded_redirect_urls" type="textarea" rows="6" cols="40" label="Exclude urls from redirection (enter a part)" description="if you have trouble with some URLs unwantingly redirecting to FLEXIcontent URLs, you can enter here a sub-string of them, in order to exclude them from redirection. Seperate urls with %% DO NOT add new line characters" />
		
		<param name="" type="separator" default="Auto-Checkins" hr="false" level="level2" menu="hide" />
		<param name="checkin_on_session_end" type="radio" default="1" label="Check-in on user logout" description="Check-out records (items,categories,etc) will be checked-in on user logout or session expiration">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		<param name="limit_checkout_hours" type="radio" default="1" label="Time-Limit check-outs" description="Impose a maximum time for checked-out records. Records exceeding this limit whill be automatically checked-in">
			<option value="0">FLEXI_NO</option>
			<option value="1">FLEXI_YES</option>
		</param>
		<param name="max_checkout_hours" type="text" label="Max checked out hours" description="Maximum allowed time an record (item,category,etc) should be checked out before automatically checking it in" default="24" />
		
		
	</params>
</install>