				<option value="1">FLEXI_FIELD_DEFAULT_VALUE_LOAD_ON_EDIT_ALL</option>
				<option value="2">FLEXI_FIELD_DEFAULT_VALUE_LOAD_ON_EDIT_AND_ON_EMPTY</option>
			</field>


			<field name="" type="separator" default="FLEXI_VALUE_MASK_VALIDATE_CONF" description="FLEXI_VALUE_MASK_VALIDATE_CONF_DESC" level="level3" />
			<field name="inputmask" type="multilist" subtype="list" default="" label="FLEXI_VALUE_VALIDATION_MASK" toggle_related="1" description="FLEXI_VALUE_VALIDATION_MASK_DESC" class="use_select2_lib fc_skip_highlight" labelclass="label label-warning">
				<option value="" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':0}">FLEXI_NO_MASK</option>
				<option value="__regex__" show_list="regexmask-mode"  hide_list="custommask-mode" fcreadonly="{'validation':0}">- REGULAR EXPRESSION (regex) -</option>
				<option value="__custom__" show_list="custommask-mode"  hide_list="regexmask-mode" fcreadonly="{'validation':0}">- CUSTOM MASK (property list)</option>

				<!-- Various aliases -->
				<group label="FLEXI_VALIDATION_VARIOUS_UNCHANGED">
					<option value="url" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'URL', 'filter_compare_type':0}">URL</option>
					<option value="email" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'EMAIL', 'filter_compare_type':0}">Email</option>
					<option value="ip" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">IP (i.i.i.i)</option>
					<option value="mac" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">MAC address (#:#:#:#:#:#)</option>
				</group>

				<group label="FLEXI_VALIDATION_DECIMAL_N_N">
					<option value="currency" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Currency ($)</option>
					<option value="currency_euro" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Currency (â‚¬)</option>
					<option value="decimal" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Decimal (radix: .)</option>
					<option value="decimal_comma" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Decimal (radix: ,)</option>
					<option value="percentage" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Percentage (0.00% - 100%)</option>
					<option value="percentage_zero_nolimit" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Percentage (0.00% - no limit)</option>
					<option value="percentage_nolimit_nolimit" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'DOUBLE', 'filter_compare_type':2}">Percentage (no limits)</option>
				</group>

				<group label="FLEXI_VALIDATION_INTEGER_NNN">
					<option value="integer" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'INT', 'filter_compare_type':1}">Integer</option>
					<option value="unsigned" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'UINT', 'filter_compare_type':1}">Integer Unsigned (positive)</option>
					<option value="mobile" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'UINT', 'filter_compare_type':1}">Mobile (9999 999 999)</option>
				</group>

				<!-- Date aliases -->
				<group label="FLEXI_VALIDATION_DATE_TIME_UNCHANGED">
					<option value="dd/mm/yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (dd/mm/yyyy)</option>
					<option value="mm/dd/yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (mm/dd/yyyy)</option>
					<option value="yyyy/mm/dd" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (yyyy/mm/dd)</option>
					<option value="dd.mm.yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (dd.mm.yyyy)</option>
					<option value="dd-mm-yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (dd-mm-yyyy)</option>
					<option value="mm.dd.yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (mm.dd.yyyy)</option>
					<option value="mm-dd-yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (mm-dd-yyyy)</option>
					<option value="yyyy.mm.dd" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (yyyy.mm.dd)</option>
					<option value="yyyy-mm-dd" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date (yyyy-mm-dd)</option>
					<option value="datetime" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date Time 24h (dd/mm/yyyy hh:mm)</option>
					<option value="datetime12" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Date Time 12h (dd/mm/yyyy hh:mm xm)</option>
					<option value="hh:mm t" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Time (hh:mm t)</option>
					<option value="h:s t" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Time (h:s t)</option>
					<option value="hh:mm:ss" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Time (hh:mm:ss)</option>
					<option value="hh:mm" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Time (hh:mm)</option>
					<option value="mm/yyyy" show_list="" hide_list="regexmask-mode,custommask-mode" fcreadonly="{'validation':1, 'filter_compare_type':1}" fcconfigs="{'validation':'STRING', 'filter_compare_type':0}">Month/Year (mm/yyyy)</option>
				</group>
			</field>
			<field name="validation" type="groupedlist" default="HTML" label="FLEXI_FIELD_SERVER_SIDE_VALIDATION" description="FLEXI_FIELD_TEXTAREA_INPUT_VALIDATION_DESC">
				<group label="FLEXI_PER_USER">
					<option value="2">FLEXI_FIELD_UGRP_TEXT_FILTERS</option>
				</group>
				<group label="FLEXI_HTML_TEXT">
					<option value="1">FLEXI_FIELD_SAFE_HTML</option>
					<option value="RAW">FLEXI_FIELD_UNSAFE_HTML</option>
					<option value="STRING">FLEXI_FIELD_PLAIN_TEXT_DECODE_ENTITIES</option>
					<option value="HTML">FLEXI_FIELD_PLAIN_TEXT_ALLOW_ENTITIES</option>
				</group>
				<group label="FLEXI_VARIOUS">
					<option value="URL">URL</option>
					<option value="EMAIL">Email</option>
					<option value="PATH">File Path</option>
				</group>
				<group label="FLEXI_NUMBERS">
					<option value="INT">Integer</option>
					<option value="UINT">Unsigned Integer</option>
					<option value="DOUBLE">Decimal</option>
				</group>
				<group label="FLEXI_STRINGS">
					<option value="WORD">A-Za-z_</option>
					<option value="ALNUM">A-Za-z0-9</option>
					<option value="CMD">A-Za-z0-9_.-</option>
					<option value="BASE64">BASE64</option>
				</group>
			</field>
			<field name="regexmask" type="text" default="" label="Regular Expression" depend_class="regexmask-mode" description="See PERL regular expression e.g. [0-9]{0-10}"  />
			<field name="custommask" type="textarea" filter="RAW" default="" label="FLEXI_VALUE_VALIDATION_CUSTOM_MASK" depend_class="custommask-mode" description="FLEXI_VALUE_VALIDATION_CUSTOM_MASK_DESC" />


			<field name="" type="separator" default="FLEXI_FORM_FIELD_CONF" description="FLEXI_FORM_FIELD_CONF_DESC" icon_class="icon-checkbox-unchecked" level="tab_open" box_type="1" />

			<field name="display_label_form" type="multilist" subtype="radio" toggle_related="1" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC" class="btn-group btn-group-yesno">
				<option value="0" show_list="custom_placeholder" hide_list="">FLEXI_NO</option>
				<option value="1" show_list="custom_placeholder" hide_list="">FLEXI_FLOATED_LEFT</option>
				<option value="2" show_list="custom_placeholder" hide_list="">FLEXI_CLEARED</option>
				<option value="-1" show_list="" hide_list="custom_placeholder">FLEXI_AS_PLACEHOLDER</option>
			</field>
			<field name="no_acc_msg_form" type="text" default="" label="FLEXI_FIELD_NOACCESS_MSG" description="FLEXI_FIELD_NOACCESS_MSG_DESC" depend_class=""/>

			<field name="" type="separator" default="FLEXI_FIELD_TEXT_INPUT" level="level2" />
			<field name="placeholder" type="text" default="" label="FLEXI_FIELD_PLACEHOLDER" description="FLEXI_FIELD_PLACEHOLDER_DESC" depend_class="custom_placeholder" />
			<field name="maxlength" type="text" default="" size="6" label="FLEXI_MAX_TXT_LEN" description="FLEXI_MAX_TXT_LEN_DESC" />
			<field name="size" type="text" default="30" size="2" label="FLEXI_FIELD_SIZE" description="FLEXI_FIELD_SIZE_DESC" />
			<field name="extra_attributes" type="text" default="" label="FLEXI_FIELD_EXTRA_ATTRIBUTES" description="FLEXI_FIELD_EXTRA_ATTRIBUTES_DESC" />

			<field name="" type="separator" default="FLEXI_PREFIX_SUFFIX_LABEL" level="level3" />
			<field name="pretext_form" type="text" default="" filter="JComponentHelper::filterText" label="FLEXI_FIELD_VALUE_PREFIX_TEXT" description="FLEXI_FIELD_VALUE_PREFIX_TEXT_DESC" />
			<field name="posttext_form" type="text" default="" filter="JComponentHelper::filterText" label="FLEXI_FIELD_VALUE_SUFFIX_TEXT" description="FLEXI_FIELD_VALUE_SUFFIX_TEXT_DESC" />

			<field name="" type="separator" default="FLEXI_FIELD_DROP_DOWN_SELECT" level="level2" />
			<field name="select_field_placement" type="radio" default="0" label="FLEXI_PLACEMENT" description="" class="btn-group group-fcinfo">
				<option value="0">FLEXI_BEFORE</option>
				<option value="1">FLEXI_AFTER</option>
			</field>

			<field name="select_field_mode" type="multilist" subtype="list" toggle_related="1" default="0" label="FLEXI_FIELD_SELECT_FIELD_MODE" description="FLEXI_FIELD_SELECT_FIELD_MODE_DESC"
				inline_tip="SELECT ... AS value, ... AS text ... FROM ... WHERE _valgrp_in_ AND (...)" tip_class="elements_sql" tip_img="comments.png"  preview_img="database_green.png"
				inline_tip2="value1::label1%%&lt;br/&gt; value2::label2%% ..." tip_class2="elements_list" tip_img2="comments.png" preview_img2="text_area.png"
				class="">
				<option value="1" show_list="elements_list,elements_box" hide_list="elements_sql" fcreadonly="{'field_elements':1}">FLEXI_FIELD_TXTSELECT_CUSTOM_ELEMENTS</option>
				<option value="2" show_list="elements_sql,elements_box" hide_list="elements_list" fcreadonly="{'field_elements':0}" force_list="elements_field" >FLEXI_FIELD_TXTSELECT_CUSTOM_SQL_QUERY</option>
				<option value="0" show_list="" hide_list="elements_list,elements_sql,elements_box">FLEXI_FIELD_TXTSELECT_ALL_EXISTING_VALS</option>
				<option value="-1" show_list="elements_list,elements_box" hide_list="elements_sql" fcreadonly="{'field_elements':1}">FLEXI_FIELD_TXTSELECT_ALL_EXISTING_N_CUSTOM_ELEMENTS</option>
				<option value="-2" show_list="elements_sql,elements_box" hide_list="elements_list" fcreadonly="{'field_elements':0}" force_list="elements_field" >FLEXI_FIELD_TXTSELECT_ALL_EXISTING_N_CUSTOM_SQL_QUERY</option>
			</field>

			<field name="select_field_elements" type="fcsortablelist" subtype="elements"
				default="SELECT value, value as text FROM #__flexicontent_fields_item_relations WHERE field_id='{field->id}' AND value != '' GROUP BY value"
				add_end="1" add_before="1" add_after="1" skip_initial_list="1"
				edit_inline="0" edit_popup="1" raw_inline="0" raw_popup="1"
				record_sep="%%" props_sep="::" prop_widths="8%,14%,14%,14%,14%" prop_lbls="FLEXI_VALUE,FLEXI_LABEL,FLEXI_IMAGE,FLEXI_VALGRP,FLEXI_STATE" props_used="1,1,0,0,0"
				editbtns_class="elements_list" value_area_class="elements_field"
				master_fieldname="cascade_after" cascaded_prop="3" state_fieldname="use_elements_state" state_prop="4"
				class="sorter-full-width required" rows="5" cols="70" label="FLEXI_FIELD_SELECT_ELEMENTS" description="FLEXI_FIELD_SELECT_ELEMENTS_DESC" labelclass="label label-info" depend_class="elements_box"/>
			<field name="select_field_prompt" type="text" size="40" default="" label="FLEXI_FIELD_SELECT_FIELD_PROMPT" description="FLEXI_FIELD_SELECT_FIELD_PROMPT_DESC" />

			<field name="" type="separator" default="FLEXI_FIELD_EDITING" level="tabset_close" box_type="1" />
		</fieldset>
		<fieldset name="group-textselect-viewing" hidden="true" icon_class="icon-screen" label="FLEXI_FIELD_VIEWING" addfieldpath="/administrator/components/com_flexicontent/elements">

			<field name="" type="separator" default="FLEXI_FIELD_VIEWING" level="tabset_start" box_type="1" />

			<field name="" type="separator" default="FLEXI_BASIC" icon_class="icon-vcard" level="tab_open" box_type="1" />

			<field name="" type="separator" default="FLEXI_FIELD_LABEL_AND_ACCESS" level="level2" />
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="show_acc_msg" type="multilist" subtype="radio" toggle_related="1" default="0" label="FLEXI_FIELD_SHOW_NOACCESS" description="FLEXI_FIELD_SHOW_NOACCESS_DESC" class="btn-group btn-group-yesno">
				<option value="0" show_list="" hide_list="field-acc-msg">FLEXI_NO</option>
				<option value="1" show_list="field-acc-msg" hide_list="">FLEXI_YES</option>
