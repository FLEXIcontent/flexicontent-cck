				<option value="datetime" show_list="text-mask-mode"  hide_list="">Date Time 24h (dd/mm/yyyy hh:mm)</option>
				<option value="datetime12" show_list="text-mask-mode"  hide_list="">Date Time 12h (dd/mm/yyyy hh:mm xm)</option>
				<option value="hh:mm t" show_list="text-mask-mode"  hide_list="">Time (hh:mm xm)</option>
				<!--option value="h:s t">Time (h:s t)</option-->
				<option value="hh:mm:ss" show_list="text-mask-mode"  hide_list="">Time (hh:mm:ss)</option>
				<option value="hh:mm" show_list="text-mask-mode"  hide_list="">Time (hh:mm)</option>
				<option value="mm/yyyy" show_list="text-mask-mode"  hide_list="">Month/Year (mm/yyyy)</option>
