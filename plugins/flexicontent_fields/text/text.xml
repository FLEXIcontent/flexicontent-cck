				<option value="mm/dd/yyyy" show_list="text-mask-mode"  hide_list="">Date (mm/dd/yyyy)</option>
				<option value="yyyy/mm/dd" show_list="text-mask-mode"  hide_list="">Date (yyyy/mm/dd)</option>
				<option value="dd.mm.yyyy" show_list="text-mask-mode"  hide_list="">Date (dd.mm.yyyy)</option>
				<option value="dd-mm-yyyy" show_list="text-mask-mode"  hide_list="">Date (dd-mm-yyyy)</option>
				<option value="mm.dd.yyyy" show_list="text-mask-mode"  hide_list="">Date (mm.dd.yyyy)</option>
				<option value="mm-dd-yyyy" show_list="text-mask-mode"  hide_list="">Date (mm-dd-yyyy)</option>
				<option value="yyyy.mm.dd" show_list="text-mask-mode"  hide_list="">Date (yyyy.mm.dd)</option>
