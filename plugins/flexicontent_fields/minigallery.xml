<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Minigallery</name>
	<author>Emmanuel Danan</author>
	<creationDate>June 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_FIELD_MINIGALLERY</description>
	<files>
		<filename plugin="minigallery">minigallery.php</filename>
		<filename plugin="minigallery">minigallery/ajax-loader.gif</filename>
		<filename plugin="minigallery">minigallery/backgroundslider.js</filename>
		<filename plugin="minigallery">minigallery/minigallery.css</filename>
		<filename plugin="minigallery">minigallery/jquery.galleriffic.js</filename>
		<filename plugin="minigallery">minigallery/jquery.opacityrollover.js</filename>
		<filename plugin="minigallery">minigallery/slideshow.js</filename>
		<filename plugin="minigallery">minigallery/index.html</filename>
	</files>
	<params group="standard">
		<param name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
	</params>
	<params group="group-minigallery">
		<param name="thumbposition" type="list" default="3" label="FLEXI_FIELD_GALLERY_THUMBS_POSITION" description="FLEXI_FIELD_GALLERY_THUMBS_POSITION_DESC">
			<option value="1">FLEXI_FIELD_GALLERY_TOP</option>
			<option value="2">FLEXI_FIELD_GALLERY_LEFT</option>
			<option value="3">FLEXI_FIELD_GALLERY_BOTTOM</option>
			<option value="4">FLEXI_FIELD_GALLERY_RIGHT</option>
		</param>
		<param name="w_l" type="text" default="450" size="4" label="FLEXI_FIELD_GALLERY_WIDTH_LARGE" description="FLEXI_FIELD_GALLERY_WIDTH_LARGE_DESC" />
		<param name="h_l" type="text" default="300" size="4" label="FLEXI_FIELD_GALLERY_HEIGHT_LARGE" description="FLEXI_FIELD_GALLERY_HEIGHT_LARGE_DESC" />
		<param name="w_s" type="text" default="100" size="4" label="FLEXI_FIELD_GALLERY_WIDTH_MINI" description="FLEXI_FIELD_GALLERY_WIDTH_MINI_DESC" />
		<param name="h_s" type="text" default="66" size="4" label="FLEXI_FIELD_GALLERY_HEIGHT_MINI" description="FLEXI_FIELD_GALLERY_HEIGHT_MINI_DESC" />
 		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="" default="" label="FLEXI_FIELD_GALLERY_SLIDESHOW" description="FLEXI_FIELD_GALLERY_SLIDESHOW_DESC" />
		<param name="wait" type="text" default="4000" size="4" label="FLEXI_FIELD_GALLERY_WAIT" description="FLEXI_FIELD_GALLERY_WAIT_DESC" />
		<param name="duration" type="text" default="1000" size="4" label="FLEXI_FIELD_GALLERY_DURATION" description="FLEXI_FIELD_GALLERY_DURATION_DESC" />
		<param name="effect" type="list" default="fade" label="FLEXI_FIELD_GALLERY_EFFECT" description="FLEXI_FIELD_GALLERY_EFFECT_DESC">
			<option value="fade">FLEXI_FIELD_GALLERY_FADE</option>
			<option value="wipe">FLEXI_FIELD_GALLERY_WIPE</option>
			<option value="slide">FLEXI_FIELD_GALLERY_SLIDE</option>
			<option value="random">FLEXI_FIELD_GALLERY_RANDOM</option>
		</param>
		<param name="direction" type="list" default="right" label="FLEXI_FIELD_GALLERY_DIRECTION" description="FLEXI_FIELD_GALLERY_DIRECTION_DESC">
			<option value="top">FLEXI_FIELD_GALLERY_TOP</option>
			<option value="left">FLEXI_FIELD_GALLERY_LEFT</option>
			<option value="bottom">FLEXI_FIELD_GALLERY_BOTTOM</option>
			<option value="right">FLEXI_FIELD_GALLERY_RIGHT</option>
			<option value="random">FLEXI_FIELD_GALLERY_RANDOM</option>
		</param>
<!--
		<param name="loop" type="list" default="true" label="FLEXI_FIELD_GALLERY_LOOP" description="FLEXI_FIELD_GALLERY_LOOP_DESC">
			<option value="true">FLEXI_YES</option>
			<option value="false">FLEXI_NO</option>
		</param>
-->
	</params>
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_minigallery.ini</language>
		<language tag="fr-FR">fr-FR.plg_flexicontent_fields_minigallery.ini</language>
	</languages>
</install>
