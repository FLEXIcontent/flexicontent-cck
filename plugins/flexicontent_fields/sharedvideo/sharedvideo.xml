<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Shared Video (YouTube,Vimeo,DailyMotion,etc)</name>
	<author>Lyquix, ggppdk</author>
	<creationDate>July 2013</creationDate>
	<copyright>Copyright (C) 2013 Lyquix</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>info@lyquix.com</authorEmail>
	<authorUrl>http://www.lyquix.com</authorUrl>
	<version>1.2</version>
	<description>PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO</description>
	<files>
		<filename plugin="sharedvideo">sharedvideo.php</filename>
		<filename>index.html</filename>
	</files>
	
	<config>
	<fields name="attribs">
	
		<!--fieldset name="standard" repeat="1">
		</fieldset-->
		<fieldset name="group-sharedvideo-editing" repeat="1" icon_class="icon-pencil" label="FLEXI_FIELD_EDITING" addfieldpath="/administrator/components/com_flexicontent/elements">
		
			<field name="display_label_form" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_FLOATED_LEFT</option>
				<option value="2">FLEXI_CLEARED</option>
			</field>
			<field name="no_acc_msg_form" type="text" default="" label="FLEXI_FIELD_NOACCESS_MSG" description="FLEXI_FIELD_NOACCESS_MSG_DESC" depend_class=""/>
			
			<field name="" type="separator" default="Display field on form" level="level1" />
			<field name="display_title_form" type="radio" default="1" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_TITLE_FORM" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_TITLE_FORM_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="display_author_form" type="radio" default="1" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_AUTHOR_FORM" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_AUTHOR_FORM_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="display_description_form" type="radio" default="1" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DESCRIPTION_FORM" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DESCRIPTION_FORM_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
		
		</fieldset>
		
		
		<fieldset name="group-sharedvideo-config" repeat="1" icon_class="icon-wrench" label="FLEXI_CONFIG" addfieldpath="/administrator/components/com_flexicontent/elements">
		    
			<field name="" type="separator" default="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_EMBEDLY_CONFIG" level="level1" />
			
			<field name="embedly_key" type="text" default="" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_EMBEDLY_API_KEY" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_EMBEDLY_API_KEY_DESC" />
			<field name="autostart" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_AUTOSTART" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_AUTOSTART_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="force_ssl" type="radio" default="1" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_FORCESSL" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_FORCESSL_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
		</fieldset>
		
		<fieldset name="group-sharedvideo-viewing" repeat="1" icon_class="icon-eye-open" label="FLEXI_FIELD_VIEWING" addfieldpath="/administrator/components/com_flexicontent/elements">
			
			<field name="" type="separator" default="FLEXI_FIELD_LABEL_AND_ACCESS" level="level1" />
			
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="show_acc_msg" type="multilist" subtype="radio" default="0" label="FLEXI_FIELD_SHOW_NOACCESS" description="FLEXI_FIELD_SHOW_NOACCESS_DESC" toggle_related="1" class="btn-group btn-group-yesno">
				<option value="0" show_list="" hide_list="field-acc-msg">FLEXI_NO</option>
				<option value="1" show_list="field-acc-msg" hide_list="">FLEXI_YES</option>
			</field>
			<field name="no_acc_msg" type="text" default="" label="FLEXI_FIELD_NOACCESS_MSG" description="FLEXI_FIELD_NOACCESS_MSG_DESC" depend_class="field-acc-msg"/>
			
			<field name="" type="separator" default="FLEXI_FIELD_VALUES" level="level1" />
			
			<field name="" type="separator" default="FLEXI_PREFIX_SUFFIX_SEPARATOR_LABEL" description="FLEXI_PREFIX_SUFFIX_SEPARATOR_LABEL_DESC_FIELD" level="level2" />
			<field name="pretext" type="text" default="" label="FLEXI_FIELD_PREFIX_TEXT" description="FLEXI_FIELD_PREFIX_TEXT_DESC" />
			<field name="posttext" type="text" default="" label="FLEXI_FIELD_SUFFIX_TEXT" description="FLEXI_FIELD_SUFFIX_TEXT_DESC" />
			
		</fieldset>	
		<fieldset name="group-sharedvideo-v-playback" repeat="1" icon_class="icon-camera" label_prefix="FLEXI_FIELD_VIEWING" label="Playback" addfieldpath="/administrator/components/com_flexicontent/elements">
			
			<field name="" type="separator" default="Video" level="level1" />
			<field name="" type="separator" default="Video Info" level="level2" />
			<field name="display_title" type="radio" default="1" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_TITLE" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_TITLE_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="headinglevel" type="list" default="3" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_TITLE_HEADING" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_TITLE_HEADING_DESC">
				<option value="1">H1</option>
				<option value="2">H2</option>
				<option value="3">H3</option>
				<option value="4">H4</option>
				<option value="5">H5</option>
				<option value="6">H6</option>
			</field>
			<field name="display_author" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_AUTHOR" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_AUTHOR_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="display_description" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DESCRIPTION" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DESCRIPTION_DESC" class="btn-group btn-group-yesno">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
		</fieldset>
		
	</fields>
	</config>
	
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_sharedvideo.ini</language>
	</languages>
</extension>
