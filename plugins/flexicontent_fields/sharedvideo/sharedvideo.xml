<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.6" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Shared Video (YouTube,Vimeo,DailyMotion,etc)</name>
	<author>Lyquix, ggppdk</author>
	<creationDate>July 2013</creationDate>
	<copyright>Copyright (C) 2013 Lyquix</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>info@lyquix.com</authorEmail>
	<authorUrl>http://www.lyquix.com</authorUrl>
	<version>1.2</version>
	<description>PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO</description>
	<files>
		<filename plugin="sharedvideo">sharedvideo.php</filename>
		<filename>index.html</filename>
	</files>
	
	<config>
	<fields name="attribs">
	
		<!--fieldset name="standard" repeat="1">
		</fieldset-->
		
		<fieldset name="group-sharedvideo-viewing" repeat="1" icon_class="icon-eye-open" label="FLEXI_FIELD_VIEWING" addfieldpath="/administrator/components/com_flexicontent/elements">
			
			<field name="" type="separator" default="FLEXI_FIELD_LABEL_AND_ACCESS" level="level1" />
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="show_acc_msg" type="radio" default="0" label="FLEXI_FIELD_SHOW_NOACCESS" description="FLEXI_FIELD_SHOW_NOACCESS_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="no_acc_msg" type="text" default="" label="FLEXI_FIELD_NOACCESS_MSG" description="FLEXI_FIELD_NOACCESS_MSG_DESC"/>
			
			<field name="" type="separator" default="FLEXI_FIELD_VALUES" level="level1" />
			
			<field name="" type="separator" default="FLEXI_PREFIX_SUFFIX_SEPARATOR_LABEL" description="FLEXI_PREFIX_SUFFIX_SEPARATOR_LABEL_DESC_FIELD" level="level2" />
			<field name="pretext" type="text" default="" label="FLEXI_FIELD_PREFIX_TEXT" description="FLEXI_FIELD_PREFIX_TEXT_DESC" />
			<field name="posttext" type="text" default="" label="FLEXI_FIELD_SUFFIX_TEXT" description="FLEXI_FIELD_SUFFIX_TEXT_DESC" />
			
		</fieldset>	
		<fieldset name="group-sharedvideo-v-playback" repeat="1" icon_class="icon-camera" label_prefix="FLEXI_FIELD_VIEWING" label="Playback" addfieldpath="/administrator/components/com_flexicontent/elements">
			
			<field name="" type="separator" default="Video" level="level1" />
			<field name="" type="separator" default="Video Info" level="level2" />
			<field name="display_title" type="radio" default="1" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_TITLE" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_TITLE_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="headinglevel" type="list" default="3" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_TITLE_HEADING" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_TITLE_HEADING_DESC">
				<option value="1">H1</option>
				<option value="2">H2</option>
				<option value="3">H3</option>
				<option value="4">H4</option>
				<option value="5">H5</option>
				<option value="6">H6</option>
			</field>
			<field name="display_author" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_AUTHOR" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_AUTHOR_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="display_duration" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DURATION" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DURATION_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="display_description" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DESCRIPTION" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_DISPLAY_DESCRIPTION_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			
			<field name="" type="separator" default="Video player" level="level2" />
			<field name="width" type="text" default="480" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_PLAYER_WIDTH" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_PLAYER_WIDTH_DESC" />
			<field name="height" type="text" default="270" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_PLAYER_HEIGHT" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_PLAYER_HEIGHT_DESC" />
			<field name="autostart" type="radio" default="0" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_AUTOSTART" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_AUTOSTART_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field>
			<field name="embedly_key" type="text" default="" size="20" label="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_EMBEDLY_KEY" description="PLG_FLEXICONTENT_FIELDS_SHAREDVIDEO_EMBEDLY_KEY_DESC" />
		</fieldset>
		
		<!--fieldset name="group-sharedvideo-fieldgrp" repeat="1" icon_class="icon-menu-3" label="Field grouping" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="" type="separator" default="FLEXI_REQUIRES_FIELDGROUP_FIELD" level="level2" />
			<field name="use_ingroup" type="radio" default="0" label="FLEXI_USE_IN_FIELD_GROUP" description="FLEXI_USE_IN_FIELD_GROUP_DESC">
				<option value="0">FLEXI_NO</option>
				<option value="0">FLEXI_YES</option>
			</field>
		</fieldset-->
		
	</fields>
	</config>
	
	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_sharedvideo.ini</language>
	</languages>
</extension>
