<?xml version="1.0" encoding="utf-8"?>
<install type="plugin" version="1.5" group="flexicontent_fields" method="upgrade">
	<name>FLEXIcontent - Toolbar</name>
	<author>Emmanuel Danan</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2009-2012 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.2</version>
	<description>Toolbar Field for FLEXIcontent</description>

	<files>
		<filename plugin="toolbar">toolbar.php</filename>
		<folder plugin="toolbar">toolbar</folder>
	</files>

		<params group="standard">
			<field name="display_label" type="radio" default="1" label="FLEXI_FIELD_DISPLAY_LABEL" description="FLEXI_FIELD_DISPLAY_LABEL_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="frontend_hidden" type="hidden" default="1" />
			<field name="backend_hidden" type="hidden" default="1" />
		</params>
		<params group="group-toolbar" addpath="/administrator/components/com_flexicontent/elements">
			<field name="display-comments" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_COMMENTS" description="FLEXI_FIELD_TOOLBAR_COMMENTS_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="display-print" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_PRINT" description="FLEXI_FIELD_TOOLBAR_PRINT_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="display-email" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_EMAIL" description="FLEXI_FIELD_TOOLBAR_EMAIL_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="display-voice" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_VOICE" description="FLEXI_FIELD_TOOLBAR_VOICE_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="voicetarget" type="text" default="flexicontent" label="FLEXI_FIELD_TOOLBAR_VOICE_TARGET" description="FLEXI_FIELD_TOOLBAR_VOICE_TARGET_DESC" />
			<field name="display-pdf" type="radio" default="0" label="FLEXI_FIELD_TOOLBAR_PDF" description="FLEXI_FIELD_TOOLBAR_PDF_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="display-social" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_ADDTHIS" description="FLEXI_FIELD_TOOLBAR_ADDTHIS_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="addthis-user" type="text" default="" size="20" label="FLEXI_FIELD_TOOLBAR_USER" description="FLEXI_FIELD_TOOLBAR_USER_DESC" />
			<field name="display-resizer" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_RESIZER" description="FLEXI_FIELD_TOOLBAR_RESIZER_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<field name="default-size" type="text" size="4" default="12" label="FLEXI_FIELD_TOOLBAR_DEFAULT_SIZE" description="FLEXI_FIELD_TOOLBAR_DEFAULT_SIZE_DESC" />
			<field name="default-line" type="text" size="4" default="16" label="FLEXI_FIELD_TOOLBAR_DEFAULT_LINE" description="FLEXI_FIELD_TOOLBAR_DEFAULT_LINE_DESC" />
			<field name="target" type="text" default="flexicontent" label="FLEXI_FIELD_TOOLBAR_TARGET" description="FLEXI_FIELD_TOOLBAR_TARGET_DESC" />
			<field name="" type="separator" default="FLEXI_FIELD_TOOLBAR_DISPLAY" level="level1" menu="hide" />
			<field name="load-css" type="radio" default="1" label="FLEXI_FIELD_TOOLBAR_CSS" description="FLEXI_FIELD_TOOLBAR_CSS_DESC">
				<option value="1">FLEXI_YES</option>
				<option value="0">FLEXI_NO</option>
			</field>
			<!--field name="spacer-size" type="text" default="21" size="4" label="FLEXI_FIELD_TOOLBAR_SPACER" description="FLEXI_FIELD_TOOLBAR_SPACER_DESC" />
			<field name="module_position" type="text" default="" size="20" label="Position du module" description="Position du module pour le cache avancé (expérimental)" />
			<field name="required" type="radio" default="0" label="Required" description="Required">
				<option value="0">FLEXI_NO</option>
				<option value="1">FLEXI_YES</option>
			</field-->
			
		</params>

	<languages>
		<language tag="en-GB">en-GB.plg_flexicontent_fields_toolbar.ini</language>
	</languages>

</install>
