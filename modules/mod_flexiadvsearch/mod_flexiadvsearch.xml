			<field name="linkadvsearch" type="multilist" subtype="radio" toggle_related="1" default="0" label="FLEXI_MOD_ADV_SEARCH_SHOW_LINK" description="FLEXI_MOD_ADV_SEARCH_SHOW_LINK_DESC" class="btn-group">
