	<version>1.0</version>
	<description>Flexicontent Universal Content Module, Genenal Custom Layout parameters for templates without parameters</description>
	
	<fields name="params">
		
		<fieldset name="layout" addfieldpath="/administrator/components/com_flexicontent/elements">
			
			<field name="" type="separator" default="FLEXI_CUSTOM_PARAMS" level="level1" />
			<field name="custom1" type="textarea" cols="35" rows="2" default="" label="'custom1' parameter" description="FLEXI_CUSTOM_DESC" />
			<field name="custom2" type="textarea" cols="35" rows="2" default="" label="'custom2' parameter" description="FLEXI_CUSTOM_DESC" />
			<field name="custom3" type="textarea" cols="35" rows="2" default="" label="'custom3' parameter" description="FLEXI_CUSTOM_DESC" />
			<field name="custom4" type="textarea" cols="35" rows="2" default="" label="'custom4' parameter" description="FLEXI_CUSTOM_DESC" />
			<field name="custom5" type="textarea" cols="35" rows="2" default="" label="'custom5' parameter" description="FLEXI_CUSTOM_DESC" />
			
		</fieldset>
		
	</fields>
	
</form>