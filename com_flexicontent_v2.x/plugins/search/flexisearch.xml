<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search" method="upgrade">
	<name>Search - FLEXIcontent</name>
	<author>Emmanuel Danan</author>
	<creationDate>June 2009</creationDate>
	<copyright>Copyright (C) 2009 Emmanuel Danan</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>emmanuel@vistamedia.fr</authorEmail>
	<authorUrl>www.vistamedia.fr</authorUrl>
	<version>1.0</version>
	<description>FLEXI_SEARCH_PLUGIN</description>
	<files>
		<filename plugin="flexisearch">flexisearch.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_search_flexisearch.ini</language>
		<language tag="fr-FR">fr-FR.plg_search_flexisearch.ini</language>
	</languages>	
	<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="filter_lang" type="radio" default="1" label="FLEXI_FILTER_LANG" description="FLEXI_FILTER_LANG_DESC">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="search_limit" type="text" size="5" default="50" label="FLEXI_SEARCH_LIMIT" description="FLEXI_SEARCH_LIMIT_DESC"/>
		</fieldset>
	</fields>
	</config>

</install>